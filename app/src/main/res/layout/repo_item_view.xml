<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/stub_repo_name_1"
        android:textSize="@dimen/text_title_size"/>


    <LinearLayout
        android:id="@+id/repo_update_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repo_name"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/repo_update_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="@string/repositories_update_label"/>

        <TextView
            android:id="@+id/repo_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stub_repo_update_1" />
    </LinearLayout>


</RelativeLayout>
